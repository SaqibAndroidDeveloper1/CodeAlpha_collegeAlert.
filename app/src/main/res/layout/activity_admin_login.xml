<?xml version="1.0" encoding="utf-8"?>
<layout
     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

  >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context=".AdminLogin"
      android:background="@drawable/screen"
    >
    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login!"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="25dp"
        />
    <EditText
        android:id="@+id/Admin_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_person_24"
        android:padding="20dp"
android:layout_marginBottom="7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint=" Username"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="19sp"
        android:layout_marginTop="110dp"
        />

    <EditText
        android:id="@+id/Adminlogin_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Admin_username"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_email_24"
        android:padding="20dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint=" Email"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="19sp"
        android:layout_marginTop="14dp"
        />

    <EditText
        android:id="@+id/Adminlogin_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Adminlogin_email"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_security_24"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="14dp"
        android:hint=" Password"
        android:layout_marginBottom="7dp"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="19sp"
        />


    <Button

        android:id="@+id/Adminlogin_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Adminlogin_password"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="17dp"
        android:textAllCaps="false"
        android:textSize="18sp"

        android:text="Login"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/Imanadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:textStyle="bold"
        android:textSize="19sp"
        android:text="Im an Admin"
        android:layout_marginLeft="240dp"

        android:layout_below="@id/Adminlogin_btn"/>
    <TextView
        android:id="@+id/createaccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Imanadmin"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="110dp"
        android:padding="5dp"
        android:text="Create an account? Click here"
        android:textSize="18sp"
        android:textStyle="bold" />
  </RelativeLayout>


  </layout>