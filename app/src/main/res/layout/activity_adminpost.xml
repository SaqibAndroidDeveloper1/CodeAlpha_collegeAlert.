<?xml version="1.0" encoding="utf-8"?>
 <layout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".Adminpost">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

  <LinearLayout

      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">



    <TextView

        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="30dp"
        android:text="Please write your Details"

        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold" />

    <EditText

        android:padding="12dp"
        android:id="@+id/Aajnews_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
         android:layout_marginBottom="10dp"
        android:hint="Enter your Objective"
        android:background="@drawable/input_bg"
         android:textColor="@color/black"

        />
    <EditText
        android:id="@+id/Description"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Aajnews_name"
        android:layout_marginTop="15dp"
        android:padding="12dp"
         android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Enter Your full Description"
        android:background="@drawable/input_bg"

        />

    <Spinner
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Description"
        android:id="@+id/spinner"/>

    <ImageView
        android:layout_width="240dp"
        android:layout_height="270dp"
        android:layout_marginTop="70dp"


        android:layout_marginLeft="90dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
     android:id="@+id/uploadimg"
       android:text="Upload Image"
        android:layout_centerHorizontal="true"
android:background="@drawable/camera"

        />
    <Button

        android:id="@+id/uploadbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Aajnews_uploadimage"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        android:background="@drawable/buttons"

        android:textAllCaps="false"
        android:textSize="14sp"

        android:text="done"
        android:textColor="@android:color/white"
        />


  </LinearLayout>

  </ScrollView>




  </RelativeLayout>
</layout>